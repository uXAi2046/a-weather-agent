# API密钥配置
# 请在 https://platform.deepseek.com/ 获取您的API密钥
DEEPSEEK_API_KEY=sk-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
# 请在 https://console.amap.com/ 获取您的高德地图API密钥
AMAP_API_KEY=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# 日志配置
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FILE=logs/weather_agent.log

# 缓存配置
ENABLE_CACHE=true
CACHE_TTL_CURRENT=600  # 实况天气缓存时间（秒）
CACHE_TTL_FORECAST=3600  # 预报天气缓存时间（秒）

# MCP服务器配置
MCP_SERVER_HOST=127.0.0.1
MCP_SERVER_PORT=8080  # 如果使用HTTP通信